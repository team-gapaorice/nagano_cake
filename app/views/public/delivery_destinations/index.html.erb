<div class="mx-5 py-5">

  <div>
  <%= flash[:notice] %>
  </div>

  <h3>配送先登録/一覧</h3>

  <%= form_with model: @delivery_destination,url: delivery_destinations_path, method: :post do |f| %>
    <%= f.label :"郵便番号（ハイフンなし）" %><br>
    <%= f.text_field :postal_code %><br>
    <%= f.label :"住所" %><br>
    <%= f.text_field :adress %><br>
    <%= f.label :"宛名" %><br>
    <%= f.text_field :name %>
    <%= f.submit'新規登録' %><br>
  <% end %>

  <table class="table table-bordered table-condensed">
    <thead>
      <tr>
        <th class="w-25">郵便番号</th>
        <th class="w-25">住所</th>
        <th class="w-25">宛名</th>
        <th class="w-25"></th>
      </tr>
      <% if @delivery_destinations.present? %>
        <% @delivery_destinations.each do |delivery_destination| %>
          <tr>
            <td><%= delivery_destination.postal_code %></td><br>
            <td><%= delivery_destination.adress %></td>
            <td><%= delivery_destination.name %></td>
            <td><%= link_to "編集する", edit_delivery_destination_path(delivery_destination.id) %>  <%= link_to "削除する", delivery_destination_path(delivery_destination.id), method: :delete %></td>
          </tr>
        <% end %>
        <% else %>
          <p>登録されている配送先がありません。</p>
      <% end %>
    </thead>
  </table>

</div>