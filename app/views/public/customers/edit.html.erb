<div class="container">
  <div class="row py-5">
    <div class="col-lg-1"></div>
    <div class="col-lg-3 bg-light">
      <h2>編集画面</h2>
    </div>
  </div>
  <%= form_with model: @customer, url: customers_mypage_path do |f| %>
    <div class="row">
      <div class="col-lg-2 mb-3">
        <%= f.label :first_name, '氏名', for: 'first_name' %>
      </div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :last_name, id: 'last_name',class:"form-control" %>
      </div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :first_name, id: 'first_name',class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 mb-3">
        <%= f.label :first_name_kana, 'フリガナ', for: 'first_name' %>
      </div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :last_name_kana, id: 'last_name_kana',class:"form-control" %>
      </div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :first_name_kana, id: 'first_name_kana',class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 mb-3">
        <%= f.label :postal_code, '郵便番号' %>
      </div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :postal_code,class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 mb-3">
        <%= f.label :adress, '住所' %>
      </div>
      <div class="col-lg-6 mb-3">
        <%= f.text_field :adress,class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 mb-3">
        <%= f.label :telephone_number, '電話番号' %>
      </div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :telephone_number,class:"form-control" %>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-2 mb-3">
        <%= f.label :email, 'メールアドレス' %>
      </div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :email,class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 mb-3">
        <%= f.submit "変更内容を保存",class:"btn btn-success" %>
      </div>
  <% end %>
  <div class="col-lg-3 mb-3">
    <%= link_to "退会する", customers_confirm_path,class:"btn btn-danger" %>
  </div>
</div>