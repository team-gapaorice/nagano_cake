<div class="container">
  <div class="row py-5">
    <div class="col-lg-1"></div>
    <div class="col-lg-3 bg-light">
      <h2>マイページ</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2">
      <h2>登録情報</h2>
    </div>
    <div class="col-lg-2">
      <%= link_to "編集する", customers_mypage_edit_path, class:"btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7">
      <table class="table table-bordered table-condensed">
        <tr>
          <th class="w-25 bg-light">氏名</th>　<td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="w-25 bg-light">カナ</th> <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="w-25 bg-light">郵便番号</th> <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="w-25 bg-light">住所</th> <td><%= @customer.adress %></td>
        </tr>
        <tr>
          <th class="w-25 bg-light">電話番号</th> <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="w-25 bg-light">メールアドレス</th> <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5">
      <table>
        <tr>
          <th class="w-50">配送先</th>
          <td><%= link_to "一覧を見る", delivery_destinations_path, class:"btn btn-primary" %></td>
      　</tr>
      　<tr>
          <th class="w-50">注文履歴</th>
          <td><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>