<div class="mx-5 py-5">
  <h1>マイページ</h1>
  <h2>登録情報</h2>
  <%= link_to "編集する", customers_mypage_edit_path %>
  <div class="w-50">
    <table class="table table-bordered table-condensed">
      <tr>
        <th class="w-25">氏名</th>　<td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="w-25">カナ</th> <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="w-25">郵便番号</th> <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="w-25">住所</th> <td><%= @customer.adress %></td>
      </tr>
      <tr>
        <th class="w-25">電話番号</th> <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="w-25">メールアドレス</th> <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
 <strong style="font-size: larger;">配送先</strong> <%= link_to "一覧を見る", delivery_destinations_path %>
 <br>
 <strong style="font-size: larger;">注文履歴</strong> <%= link_to "一覧を見る", orders_path %>
</div>
