<div class="mx-5 py-5">
  <h2>商品新規登録</h2>
  <div class="mx-5 py-5">
    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      商品画像  <%= f.file_field :image, accept: "image/*" %><br>
      商品名  <%= f.text_field :name %><br>
      商品説明  <%= f.text_area :introduction %><br>
      ジャンル  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %><br>
      税抜価格  <%= f.number_field :tax_excluded_price, step: 1 %>円<br>
      販売ステータス  <%= f.radio_button :is_active, "true" %><%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, "false" %><%= f.label :is_active, "販売停止中" %><br>
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>