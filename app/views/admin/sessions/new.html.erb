<div class="container">
  <div class="row py-5">
    <div class="col-lg-3 bg-light">
      <h3>管理者ログイン</h3>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :メールアドレス,class:"col-lg-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control col-lg-5 border-dark" %>
    </div>
    <br>
    <div class="form-group row">
      <%= f.label :パスワード,class:"col-lg-2" %>
      <%= f.password_field :password, autocomplete: "current-password" , class:"form-control col-lg-5 border-dark" %>
    </div>
    <div class="form-group row">
      <div class="col-lg-2"></div>
      <%= f.submit "ログイン",class:"btn btn-primary" %>
    </div>
  <% end %>
</div>


