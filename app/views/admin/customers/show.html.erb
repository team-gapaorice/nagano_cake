<div class="mx-5 py-5">
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
  <div class="w-50">
    <table class="table table-bordered table-condensed">
      <tr>
        <th class="w-25">会員ID</th> <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th class="w-25">氏名</th>　<td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="w-25">カナ</th> <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="w-25">郵便番号</th> <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="w-25">住所</th> <td><%= @customer.adress %></td>
      </tr>
      <tr>
        <th class="w-25">電話番号</th> <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="w-25">メールアドレス</th> <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th class="w-25">会員ステータス</th> <td><%= @customer.is_active ? "有効" : "退会" %></td>
      </tr>
    </table>
  </div>
  <%= link_to "編集する", edit_admin_customer_path %>
 <br>
 <%= link_to "注文履歴一覧を見る", admin_top_path %>
</div>