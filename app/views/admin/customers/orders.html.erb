<div class="container">
  <div class="row py-5">
    <div class="col-lg-5 bg-light">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴</h2>
    </div>
  </div>
  <table class="table table-hover">
    <tr class="bg-light">
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order[:id]) do %>
            <%= order.created_at.strftime("%Y/%m/%d/%T") %>
          <% end %>
        </td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
  </table>
  <div class="row py-5">
    <%= paginate @orders %>
  </div>
</div>